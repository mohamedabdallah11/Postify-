@{
    ViewData["Title"] = "Create User";
}
@model Profile.Models.User

<form asp-action="Store" asp-controller="User" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" >
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" id="Age" name="Age" >
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" >
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" >
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div>
        <label for="Roles" class="form-label">Roles</label>
        <select class="form-select" id="Roles" name="Role_Id" >
            <option disabled selected value="">Open this select menu</option>
            @foreach (var role in ViewBag.roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
@*         @Html.ValidationMessage("Role_Id", "Role is required.", new { @class = "text-danger" })
 *@    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}


